<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "トップ",root_path %></li>
    <li class="breadcrumb-item active" aria-current="page">コース詳細</li>
  </ol>
</nav>


<div class="row">
  <div class="col-md-8">
    <h3 class="card-text">

      <%= @course.title%>
    </h3>
    <div class="col-md-6">
      <% if @course.digest_movie_url.nil? %>
        <%= attachment_image_tag @course, :image , :fill, 158, 135, fallback: "no_image.jpg", size: '280x200' %>
      <% else %>
        <div class="movie　row">
          <iframe width="100%" height="300" src="<%= @course.digest_movie_url %>" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
      <% end %>
    </div>
    <div class="col-md-6 lecture-text">
        <%= @course.introduce %>
    </div>

  </div>

  <div class="col-md-4">
    <%= render "sections/section" %>
  </div>

</div>
