<% provide(:title, "Edit user")%>
<% provide(:button_text, "社員情報を更新する")%>
<% provide(:admin_path,admin_user_path)%>

<div class="row">
	<div class="col-md-8">
		<h1>社員情報を更新する</h1>
	</div>
	<div class="col-md-4">
		<% if current_admin.admin? %>
    		<%= link_to "削除する",admin_user_path(@user),method: :delete,
                                  data: { confirm: "本当に削除しますか？" },class: "btn btn-danger" %>
  		<% end %>
	</div>
</div>



<div class="line"></div>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= render 'form' %>
	</div>
</div>