<div class="card-wrap">
  <% @courses.each_with_index do |courses, index| %>
  <%= link_to admin_course_path(courses) do %>
    <div class="card">
      <!-- :image_id を:imageにしてストロングパラメータもそうすると画像投稿できた -->
      <%= attachment_image_tag courses, :image, :fill, 158, 135, fallback: "no_image.jpg", size: '210x140' %>
      <div class="card-body">
        <span class="card-text">
          <%= courses.title %>
        </span>
        <br>
        <span class="card-introduce">
          <%= courses.introduce %>
        </span>
      </div>
    </div>
    <% end %>
  <% end %>
</div>
