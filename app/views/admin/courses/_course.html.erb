<div class="card-wrap">
  <% @courses.each do |courses| %>
    <%= link_to admin_course_path(courses),data: {"turbolinks" => false} do %>
      <div class="card">
      <!-- :image_id を:imageにしてストロングパラメータもそうすると画像投稿できた -->
      <%= attachment_image_tag courses, :image, :fill, 158, 135, fallback: "no_image.jpg", size: '210x140' %>
        <div class="card-body">
          <span class="card-text">
            <strong>【 <%= courses.title %> 】</strong>
          </span>
          <br>
          <span class="card-introduce">
            <%= courses.introduce %>
          </span>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
