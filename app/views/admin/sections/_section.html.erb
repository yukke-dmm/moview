<div class="row">
  <div class="col-md-12 ">
    <h3 class="card-text">セクション一覧      <%= link_to "セクションを追加する",admin_path(@course),class: "btn btn-primary right" %></h3>
  </div>
</div>

<br>

<% i = 0 %>

<div class="panel-group" id="accordion">
  <% @sections.each do |section| %>
    <div class="panel panel-default">

      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= i = i + 1 %>">
            <i class="fas fa-arrow-alt-circle-down">　</i><!-- <i class="far fa-arrow-alt-circle-up"></i> -->
          </a>
            <%= section.title %>
            <div class="right">
              <%= link_to "セクションを編集する",edit_admin_section_path(section),class: "btn btn-primary" %>
              <%= link_to "レクチャーを追加する",admin_lec_new_path(section),class: "btn btn-primary" %>
            </div>

        </h4>
      </div>

            <!-- 上のiの計算で数字が変わっているため、ここをi+1にすると連動しなくなるので注意 -->
      <div id="collapse<%= i %>" class="panel-collapse collapse <%='in' if (section.id).to_i == (params[:section_id]).to_i %><%='out' if (section.id).to_i != (params[:section_id]).to_i %>" >
<!--          <div id="collapse<%= i %>" class="panel-collapse collapse out"> -->
        <% section.lectures.each do |lecture|%>
          <div class="panel-body <%= 'lightpink' if (lecture.id).to_i == (params[:lecture_id]).to_i%>">
            <%= link_to admin_lec_path(section,lecture) do %>
              <%= lecture.title %>
            <% end %>

            <%= link_to "レクチャーを編集する",edit_admin_lecture_path(lecture),class: "btn btn-primary right" %>
          </div>
        <% end %>
      </div>

    </div>
  <% end %>
</div>