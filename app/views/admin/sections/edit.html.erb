<% provide(:title, "Edit section")%>
<% provide(:button_text, "セクション情報を更新する")%>
<% provide(:admin_path,admin_section_path)%>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "コース一覧",admin_courses_path %></li>
    <li class="breadcrumb-item"><%= link_to admin_course_path(@section.course.id) do %><%= @section.course.title %><%end%></li>
    <li class="breadcrumb-item active" aria-current="page"><%= @section.title %></li>
  </ol>
</nav>


<div class="row">
  <div class="col-md-8">
    <h3>セクション情報を更新する。</h3>
  </div>
