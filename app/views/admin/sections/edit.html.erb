<% provide(:title, "Edit section")%>
<% provide(:button_text, "セクション情報を更新する")%>
<% provide(:admin_path,admin_section_path)%>

<div class="row">
  <div class="col-md-8">
    <h3>セクション情報を更新する。</h3>
  </div>
  <div class="col-md-4">
    <%= link_to "削除する",admin_section_path(@section), method: :delete,data: { confirm: "本当に削除しますか？" },class: "btn btn-danger" %>
  </div>
</div>

<div class="line"></div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'form' %><br>

        <table class="table table-bordered table-sortable">
          <tbody id="lectures_list">
                  <% @lecture.each do |lecture|%>
                    <%= content_tag "tr", id: "lecture-#{lecture.id}", class: "item", data: { model_name: lecture.class.name.underscore, update_url: admin_lecture_sort_path(lecture),"turbolinks" => false} do %>
                      <td>
                        <%= lecture.title %>
                        <%= link_to "レクチャー編集",edit_admin_lecture_path(lecture),class: "btn btn-warning right" %>
                      </td>
                    <% end %>
                  <% end %>
          </tbody>
        </table>

<!-- data: {"turbolinks" => false} -->
  </div>
</div>
