<%= form_for(@lecture,url: yield(:admin_path)) do |f| %>

  <%= f.hidden_field :section_id, :value => params[:section_id] || @lecture.section_id%>

  <%= f.label :title,"タイトル" %> <span class="ness">【必須】</span>
  <%= f.text_field :title %>

  <%= f.label :introduce,"説明文"%> <span class="ness">【必須】</span>
  <%= f.text_area :introduce %>

  <%= f.label :lecture_movie_url,"レクチャー動画URL"%>
  <%= f.text_area :lecture_movie_url %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>

<% end %>
