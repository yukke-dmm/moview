		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_message',object: @user%>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :email %>
			<%= f.email_field :email %>

			<%= f.label :employee_number %>
			<%= f.text_field :employee_number %>

			<%= f.label :password %>
			<%= f.password_field :password %>

			<%= f.label :password_confirmation,"パスワード確認" %>
			<%= f.password_field :password_confirmation %>

			<%= f.submit yield(:button_text), class: "btn btn-promary" %>
		<% end %>