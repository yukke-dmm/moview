<header>
    <div class="container">
        <nav class="nav">
            <%= link_to "MOVIEW",root_path,id: "logo" %>
            <ul class="nav navbar-nav navbar-right">
                <% if logged_in? %>
                <li class="header-name"><%= current_user.name %></li>
                    <% if current_user.admin? %>
                        <li><%= link_to "社員一覧",users_path %></li>
                        <li><%= link_to "コース一覧",courses_path %></li>
                        <li><%= link_to "ログアウト",logout_path,method: :delete %></li>
                    <% else %>
                        <li><%= link_to "トップ",root_path %></li>
                        <li><%= link_to "使い方",about_path %></li>
                        <li><%= link_to "ログアウト",logout_path,method: :delete %></li>
                    <% end %>
                <% elsif %>
                    <li><%= link_to "ログイン",login_path%></li>
                <% end %>
            </ul>
        </nav>
    </div>
</header>